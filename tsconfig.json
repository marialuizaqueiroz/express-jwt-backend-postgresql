    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "removeComments": false,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
